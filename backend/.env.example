# LinkedIn Alumni Scraper - Environment Configuration
# Copy this file to .env and fill in your actual credentials

# ⚠️  IMPORTANT: Never commit real credentials to version control!
# Fill in your actual values and keep the .env file private

# LinkedIn Credentials (REQUIRED)
LINKEDIN_EMAIL=your-email@example.com
LINKEDIN_PASSWORD=your-secure-password

# University Information (REQUIRED)
UNIVERSITY_NAME=Your University Name
UNIVERSITY_LINKEDIN_ID=your-university-linkedin-id
UNIVERSITY_LINKEDIN_URL=https://www.linkedin.com/school/your-university-linkedin-id/people/

# Application Settings
PORT=3001
NODE_ENV=development

# Frontend Configuration (for CORS and API calls)
FRONTEND_URL=http://localhost:3000

# Frontend Build Settings (served by backend in production)
SERVE_FRONTEND=false

# Browser Settings
HEADLESS=false
BROWSER_TIMEOUT=30000
NAVIGATION_TIMEOUT=30000
WAIT_TIMEOUT=5000
DISABLE_WEB_SECURITY=false
BLOCK_IMAGES=false
BLOCK_CSS=false

# Scraping Settings
DELAY_MIN=2000
DELAY_MAX=5000
BATCH_SIZE=50
MAX_RETRIES=3

# Rate Limiting
REQUESTS_PER_MINUTE=30
CONCURRENT_REQUESTS=3

# File Paths
SEARCH_NAMES_FILE=../search_names.csv
RESULTS_DIRECTORY=./results
LOGS_DIRECTORY=./logs

# Security
USER_AGENT="Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/120.0.0.0 Safari/537.36"

# Anti-Detection Settings
ENABLE_STEALTH=true
VIEWPORT_WIDTH=1366
VIEWPORT_HEIGHT=768
HUMAN_LIKE_DELAYS=true
RANDOM_MOUSE_MOVEMENTS=true

# Debug Settings
DEBUG_MODE=false
SAVE_SCREENSHOTS=false
SAVE_PAGE_CONTENT=false

# UI/Frontend Settings (passed to frontend)
TOAST_DURATION=5000
ENABLE_AUTO_REFRESH=true
ENABLE_TOAST_NOTIFICATIONS=true
